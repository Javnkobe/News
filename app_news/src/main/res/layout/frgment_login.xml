<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.feicui.edu.highpart.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="用户名："
        android:textSize="20sp"
        android:id="@+id/tv_username"
        android:layout_alignBaseline="@+id/et_username"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="密   码："
        android:textSize="20sp"
        android:id="@+id/tv_pwd"
        android:layout_toLeftOf="@+id/et_username"
        android:layout_alignBaseline="@+id/et_pwd"
        android:layout_alignBottom="@+id/et_pwd"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_username"
        android:layout_alignParentTop="true"
        android:hint="请输入用户名"
        android:layout_toRightOf="@+id/tv_username"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_pwd"
        android:layout_below="@+id/et_username"
        android:hint="请输入密码"
        android:layout_toRightOf="@+id/tv_pwd"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pwd"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/ll_button"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="登入"
            android:id="@+id/btn_login"
            android:textSize="20sp"
            android:background="@color/colorAccent"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:id="@+id/btn_forgetPwd"
            android:layout_weight="2.0"
            android:textSize="20sp"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:id="@+id/btn_register"
            android:layout_weight="1.0"
            android:textSize="20sp"
            android:background="@color/colorGreen"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_button"
        android:background="@drawable/share_little_bg">

        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fun_share_friends"
            android:id="@+id/iv_friends"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fun_share_weibo"
            android:id="@+id/iv_weibo"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fun_share_weixin"
            android:id="@+id/iv_weixin"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/addimport_qq"
            android:id="@+id/iv_qq"
            />
    </LinearLayout>


</RelativeLayout>
